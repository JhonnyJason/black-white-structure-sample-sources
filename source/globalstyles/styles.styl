// globalstyles styles

/*==========================================================
Color Theme
==========================================================*/
cd-foreground = black
cd-flash = purple
cd-background = white

/*==========================================================
Global Variables
==========================================================*/
// max-content-width = 900px
// mobile-side-padding = 15px


/*==========================================================
General Tag Styles
==========================================================*/
body
    background-color cd-background
    color cd-foreground
    font-family: Arial, Helvetica, sans-serif
    text-align: left
    font-size: 12pt
    width 100%
    max-width 800px
    box-sizing: border-box
    margin-left 150px
    overflow auto
    padding-top 150px
    padding-left 15px
    padding-right 15px
    padding-bottom 150px

h1
    font-weight: bold
    font-size: 32pt
    padding-left 15px
    margin-bottom 20px
h2
    font-weight: bold
    font-size: 24pt
    padding-left 15px
    margin-bottom 20px
h3
    font-weight: bold
    font-size: 18pt
    padding-left 15px
    margin-bottom 20px
h4 
    font-weight: bold
    font-size: 14pt
    padding-left 15px
    margin-bottom 20px
h5 
    // font-weight: bold
    font-size: 14pt
    padding-left 15px
    margin-bottom 20px
p
    font-size: 12pt
    padding-left 15px
    margin-bottom 20px

ul
    list-style: square
    padding-left 40px
    margin-bottom: 20px

.block
    padding-top 15px
    padding-bottom 15px
    margin-bottom 20px
    padding-left 2px
    padding-right 2px
    border-left solid alpha(cd-foreground, 0.3) 8px
    border-top solid alpha(cd-foreground, 0.1) 1px
    transition all 0.3s
    // opacity 0.7

.block:hover
    border-left solid cd-foreground 8px
    box-shadow: 0 0 5px 0 alpha(cd-foreground, 0.2)
    // opacity 1.0
    

